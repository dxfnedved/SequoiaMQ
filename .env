# LLM配置
# 选择使用的大模型 (qwen: 通义千问, douban: 豆包)
LLM_MODEL_TYPE=deepseek

# 通义千问API配置
# 从 https://dashscope.console.aliyun.com/ 获取
QWEN_API_KEY=your_qwen_api_key_here
QWEN_API_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation

# 豆包API配置
# 从 https://www.doubao.com/ 获取
DOUBAN_API_KEY=your_douban_api_key_here
DOUBAN_API_ENDPOINT=https://api.doubao.com/v1/chat/completions 

# 大模型API配置
LLM_MODEL_TYPE=deepseek  # 可选：deepseek 或 qwen
LLM_API_KEY=sk-a6d80fc8d0fb42b4aa8bdaa18865c42d  # 请替换为你的API密钥
LLM_API_ENDPOINT=https://api.deepseek.com  # 请替换为实际的API端点

# 数据缓存配置
CACHE_DURATION=86400  # 缓存时长（秒），默认24小时
CACHE_DIR=./cache  # 缓存目录

# 分析结果配置
SUMMARY_DIR=./summary  # 分析结果保存目录

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=./logs

# 其他配置
MAX_WORKERS=8  # 最大工作线程数
BATCH_SIZE=50  # 批处理大小